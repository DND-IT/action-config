FROM golang:1.23-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 go build -ldflags="-s -w" -o /action-config ./cmd/action-config

FROM alpine:3.20

RUN apk add --no-cache git

COPY --from=builder /action-config /action-config

ENTRYPOINT ["/action-config"]
